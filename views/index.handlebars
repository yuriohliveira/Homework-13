
<div class="container-fluid">
  

  <div class="row">
    <div class="col-sm-6">
      <div id="add">

        <h2>Add a Burger!</h2>

        <form class="create-form">
          <div class="form-group">
            <label for="newBurger">Burger Name:</label>
            <input type="text" id="newBurger" name="name">
          </div>
          <button type="submit">Add burger</button>
        </form>

      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <div id="uneaten">

          <h2>Uneaten Burgers</h2>

          <ul>
          {{#each burgers}}
              {{#unless devoured}}
                {{> burgers/burger-block devour=true}}
              {{/unless}}
          {{/each}}
          </ul>

      </div>
    </div>

    <div class="col-sm-12">
      <div id="eaten">

        <h2>Eaten Burgers</h2>

        <ul>
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block devour=false}}
            {{/if}}
          {{/each}}
        </ul>

      </div>
    </div>
  </div>

</div>
